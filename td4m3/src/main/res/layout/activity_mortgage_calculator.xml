<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/formElementTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/mortgage_title_padding"
        android:text="@string/mortgage_payment_calculator_title"
        android:textColor="@color/td_green"
        android:textSize="@dimen/text_20_sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_calculator_mortgage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="beforeDescendants"
        android:orientation="vertical" />

    <Spinner
        android:id="@+id/frequency_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>