<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/card_side_spacing"
        android:layout_marginEnd="@dimen/card_side_spacing"
        android:layout_gravity="center"
        android:background="@drawable/card_shadow"
        card_view:cardCornerRadius="@dimen/card_corner_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/cardTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_30_sp"
                android:textColor="@color/td_green"
                tools:text="Card Text" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/cardListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:importantForAccessibility="auto"
                android:layout_below="@id/cardTitle">
            </android.support.v7.widget.RecyclerView>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>